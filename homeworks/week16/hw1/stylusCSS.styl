/* 拿留言板的 style.css 來改成 stylus */
$bgc_default = #b4c6cc
$bgc_primary = #3F5871
$bgc_secondary = #fff
$color_primary = #fff
$color_gray = #e7e7e7


*
	position: relative
	box-sizing: border-box

body 
	background-color: $bgc_default

.container
	margin: 30px auto 0
	width: 70%
	max-width: 870px
	background-color: $bgc_default
	&_alert 
		padding: 15px 0
		text-align: center
		background-color: $bgc_secondary
	&_add 
		background-color: $bgc_primary
		color: $color_primary
		border-radius: 5px
	&_add form
		display: flex
		flex-direction: column
		margin: 0 auto
		padding: 15px 10px
		width: 75%
	&_page 
		display: flex
		flex-direction: row
		justify-content: center
		height: 35px
		margin: 15px 0

.login
	&_title 
		margin: 0 auto
		font-size: 24px
	&_item 
		display: flex
		justify-content: space-around
	&_item a
		display: inline-block
		width: 40%
		height: 1.5em
		background-color: $bgc_secondary
		text-decoration: none
		text-align: center

.page_item 
	display: inline-block
	margin: 0 5px
	width: 35px
	line-height: 31px
	color: #000
	background-color: $bgc_secondary
	border-right: 1px solid #fff
	border-top: 1px solid #fff
	border-left: 2px solid #8c8c8c
	border-bottom: 2px solid #8c8c8c
	border-radius: 2px
	text-align: center
	text-decoration: none
	transition: all .1s
	&.active
	&.unactive
	&:hover 
		border-right: 2px solid $color_gray
		border-top: 2px solid $color_gray
		border-left: 1px solid #fff
		border-bottom: 1px solid #fff
		background-color: #000
		color: $color_primary
	&.active 
		cursor: default
	&.unactive 
		background-color: #828282
		cursor: default

.accordion 
	width: 100%

.card-header 
	background: linear-gradient(rgba(0,0,0,.03), #fff)

.comment
	&_status
		padding: 10px 0
		text-align: center
	&_head 
		display: flex
		align-items: center
		flex-direction: column
		width: 100%
		height: auto
		border-radius: 5px
		background-color: $bgc_secondary
		text-align: center
	&_title
	&_main
		display: flex
		flex-direction: row
		padding: 10px 0
		width: 100%
	&_sub
	&_reply
		display: inline-block
		width: 50%
		padding: 25px
		border-radius: 5px
		margin-bottom: 25px
		text-align: left
		background-color: #d9d9d9
	&_parent
	&_main
		background-color: $bgc_primary
		color: $color_primary

.title
	&_nickname 
		flex: 2
		display: inline-block
	&_comments 
		flex: 6
		display: inline-block
		border-left: 1px solid #000
		border-right: 1px solid #000
	&_time 
		flex: 2
		display: inline-block

.row 
	margin-bottom: 25px
	background-color: #c8c8c8
	& .nickname
	& .comments
	& .created_time
		text-align: center
		padding: 0 15px
		overflow: hidden

.nickname 
	width: 20%
	display: inline-block

.comments 
	width: 60%
	display: inline-block
	border-left: 1px solid $color_gray
	border-right: 1px solid $color_gray
	word-wrap: break-word

.created_time 
	width: 20%
	display: inline-block

.set_btn 
	display: flex
	height: 33px
	position: absolute
	left: -104px
	& a 
		display: inline-block
		width: 100%
		height: 100%
		padding: 3px 5px 0
		margin: 0 1px
		color: #000
		background-color: $bgc_secondary
		border: 2px solid #000
		border-radius: 2px
		text-decoration: none
		transition: all .2s
	& a:hover 
		color: #e7e7e7
		border: 2px solid rgba(0,0,0,0)
		background-color: #000
		border-radius: 5px

